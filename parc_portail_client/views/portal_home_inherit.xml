<odoo>
  <template id="portal_my_home_inherit_parc" inherit_id="portal.portal_my_home"
            name="Parc IT – Tableau de bord client">
    <xpath expr="//div[contains(@class,'o_portal_my_home')]" position="inside">
      <div class="row mt-4">
        <!-- ÉQUIPEMENTS -->
        <div class="col-6 col-md-4 col-lg-3 mb-3">
          <a href="/my/equipments" class="o_portal_panel d-block text-center">
            <span class="fa fa-desktop fa-3x mb-2 text-primary"/>
            <div><strong>Mes équipements</strong></div>
            <span class="badge bg-primary mt-1">
              <t t-esc="equipment_count"/>
            </span>
          </a>
        </div>

        <!-- CONTRATS -->
        <div class="col-6 col-md-4 col-lg-3 mb-3">
          <a href="/my/contracts" class="o_portal_panel d-block text-center">
            <span class="fa fa-file-contract fa-3x mb-2 text-success"/>
            <div><strong>Mes contrats</strong></div>
            <span class="badge bg-success mt-1">
              <t t-esc="contract_count"/>
            </span>
          </a>
        </div>

        <!-- FACTURES -->
        <div class="col-6 col-md-4 col-lg-3 mb-3">
          <a href="/my/invoices" class="o_portal_panel d-block text-center">
            <span class="fa fa-file-invoice-dollar fa-3x mb-2 text-warning"/>
            <div><strong>Mes factures</strong></div>
            <span class="badge bg-warning mt-1">
              <t t-esc="invoice_count"/>
            </span>
          </a>
        </div>

        <!-- TICKETS -->
        <div class="col-6 col-md-4 col-lg-3 mb-3">
          <a href="/my/tickets" class="o_portal_panel d-block text-center">
            <span class="fa fa-tools fa-3x mb-2 text-danger"/>
            <div><strong>Mes tickets</strong></div>
            <span class="badge bg-danger mt-1">
              <t t-esc="ticket_count"/>
            </span>
          </a>
        </div>
      </div>
    </xpath>
  </template>
</odoo>
