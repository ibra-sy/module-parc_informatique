<odoo>
  <data>
    <template id="portal_my_home" name="Portail Client – Accueil">
      <t t-call="portal.portal_layout">
        <div class="container mt-4">
          <h2>Bienvenue, <t t-esc="user.partner_id.name"/> !</h2>
          <div class="row">
            <div class="col-md-6 col-lg-4 mb-3">
              <a class="btn btn-primary w-100" href="/my/equipments">
                Mes équipements (<t t-esc="equipment_count"/>)
              </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-3">
              <a class="btn btn-primary w-100" href="/my/contracts">
                Mes contrats (<t t-esc="contract_count"/>)
              </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-3">
              <a class="btn btn-primary w-100" href="/my/invoices">
                Mes factures (<t t-esc="invoice_count"/>)
              </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-3">
              <a class="btn btn-primary w-100" href="/my/tickets">
                Mes tickets (<t t-esc="ticket_count"/>)
              </a>
            </div>
            <div class="col-md-6 col-lg-4 mb-3">
              <a class="btn btn-secondary w-100" href="/my/profile">
                Mon profil
              </a>
            </div>
          </div>
        </div>
      </t>
    </template>
  </data>
</odoo>
